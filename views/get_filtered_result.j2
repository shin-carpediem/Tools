{% extends 'base.j2' %}
{% block content %}
<form action="/get_filtered_result" method="post">
  <div class="row">
    <p class="col-4">Collection: </p>
    <select class="col-8" name="collection" readonly selected>
      <option value="{{ collection }}">
        {{ collection }}
      </option>
    </select>
  </div>
  <div class="row">
    <p class="col-4">Key: </p>
    <select class="col-8" name="key" required>
      {% for item in key %}
      <option value="{{ item }}">
        {{ item }}
      </option>
      {% endfor %}
    </select>
  </div>
  <div class="row">
    <p class="col-4">Compare:</p>
    <select class="col-8" name="compare" required>
      {% for item in compare %}
      <option value="{{ compare[item] }}">
        {{ compare[item] }}
      </option>
      {% endfor %}
    </select>
  </div>
  <div class="row pb-3">
    <p class="col-4">Value:</p>
    <input class="col-8" name="value" type="text" maxlength=50 />
  </div>
  {% include "components/create_csv_btn.j2" %}
</form>
<div class="mt-3">
  {% include "components/back_link.j2" %}
</div>
{% endblock %}